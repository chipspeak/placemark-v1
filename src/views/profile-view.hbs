{{> menu active="profile"}}
<section class="content box">
  <div class="columns">
    <div class="column is-half">
      <form action="/updateuser/{{user._id}}" method="POST">
        <h3 class="subtitle">Edit Personal Details</h3>
        <div class="field is-horizontal field-body">
          <div class="field">
            <label class="label">First Name</label>
            <p class="control has-icons-left">
              <input class="input" type="text" placeholder="{{user.firstName}}" name="firstName">
              <span class="icon is-small is-left">
                <i class="fa-solid fa-file-signature"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <label class="label">Last Name</label>
            <p class="control has-icons-left">
              <input class="input" type="text" placeholder="{{user.lastName}}" name="lastName">
              <span class="icon is-small is-left">
                <i class="fa-solid fa-file-signature"></i>
              </span>
            </p>
          </div>
        </div>
        <div class="field">
          <label class="label">Password</label>
          <p class="control has-icons-left">
            <input class="input" type="password" placeholder= "****" name="password">
            <span class="icon is-small is-left">
              <i class="fa-solid fa-unlock-keyhole"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <label class="label">Email</label>
          <p class="control has-icons-left">
            <input class="input" type="email" placeholder= "{{user.email}}" name="email">
            <span class="icon is-small is-left">
              <i class="fa-solid fa-unlock-keyhole"></i>
            </span>
          </p>
        </div>
        <br>
        <button class="button is-link is-success is-outlined">Update profile<i class="fa-solid fa-user-check pl-2"></i></button>
      </form>
    </div>
  </div>
</section>