{{> welcome-menu active="login"}}
<section class="content box">
  <div class="columns">
    <div class="column is-half">
      <form action="/authenticate" method="POST">
        <h3 class="subtitle">Log-in</h3>
        <div class="field">
          <label class="label">Email</label>
          <p class="control has-icons-left">
            <input class="input" placeholder="Email" name="email" field>
            <span class="icon is-small is-left">
              <i class="fa-solid fa-envelope"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <label class="label">Password</label>
          <p class="control has-icons-left">
            <input class="input" type="password" placeholder="****" name="password" required>
            <span class="icon is-small is-left">
              <i class="fa-solid fa-unlock-keyhole"></i>
            </span>
          </p>
        </div>
        <button class="button is-success has-text-white">Login<i class="fa-solid fa-right-to-bracket pl-2"></i>
        </button>
      </form>
    </div>
  </div>
</section>