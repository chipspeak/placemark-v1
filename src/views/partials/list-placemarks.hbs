<div class="columns is-multiline">
  {{#each placemarks}}
    <div class="column is-one-third">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title is-centered">{{title}}</p>
          <a class="card-header-icon" title="Expand/Collapse Details" aria-label="more options" data-action="collapse" href="#details-{{_id}}" onclick="toggleCollapse(event, 'details-{{_id}}')">
            <span class="icon">
              <i class="fas fa-angle-down" aria-hidden="true"></i>
            </span>
          </a>
        </header>
        <div class="card-content collapse" id="details-{{_id}}">
          <div class="content">
            <p><strong>Description:</strong> {{description}}</p>
            <p><strong>Location:</strong> {{location}}</p>
            <p><strong>Latitude:</strong> {{latitude}}</p>
            <p><strong>Longitude:</strong> {{longitude}}</p>
            <p><strong>Category:</strong> {{category}}</p>
          </div>
          <!-- specifying the id of this link and then triggering the toggleCollapse function on mouse press -->
          <a class="card-header-icon" title="View Photo" aria-label="more options" data-action="collapse" href="#details-{{_id}}" onclick="toggleCollapse(event, 'photo-{{_id}}')">
            <span class="icon">
              <i class="fas fa-angle-down" aria-hidden="true"></i>
            </span>
          </a>
          <!-- if there is an image we display it otherwise nothing this div will not be rendered -->
          {{#if img}}
          <div class="card-image collapse" id="photo-{{_id}}">
            <figure class="image">
              <img src={{img}} alt="Placemark Image">
            </figure>
          </div>
          {{/if}}
        </div>
        <footer class="card-footer">
          <hr>
          <a href="/dashboard/updateplacemark/{{_id}}" title="Update Placemark" class="card-footer-item">
            <span class="icon has-text-success">
              <i class="fas fa-pen-to-square"></i>
            </span>
          </a>
          <a href="/dashboard/uploadimage/{{_id}}" title="Upload/Update Image" class="card-footer-item">
            <span class="icon has-text-success">
              <i class="fas fa-camera"></i>
            </span>
          </a>
          <!-- using onclick to return a confirm prompt -->
          <a href="/dashboard/deleteplacemark/{{_id}}" title="Delete Placemark" class="card-footer-item" onclick="return confirm('Are you sure you want to delete this placemark?');">
            <span class="icon has-text-danger">
              <i class="fas is-danger fa-trash"></i>
            </span>
          </a>
        </footer>
      </div>
    </div>
  {{/each}}
</div>

<!-- script to hide the element which has its id passed when the event occurs (mouse click on down arrow in above dropdown card details) -->
<script>
  function toggleCollapse(event, id) {
    event.preventDefault();
    const content = document.getElementById(id);
    content.classList.toggle('is-hidden');
  }
</script>
