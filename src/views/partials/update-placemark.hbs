{{> menu active="dashboard"}}

<div class="columns mt-5 is-centered">
  <div class="column">
    <div class="card">
      <header class="card-header has-background-success">
        <p class="card-header-title has-text-white">Edit the details of this Placemark</p>
      </header>
      <div class="card-content">
        <div class="content">
          <form action="/dashboard/updateplacemark/{{placemark._id}}" method="POST">
            <div class="columns">
              <!-- left column -->
              <div class="column">
                <div class="field">
                  <label class="label">Title</label>
                  <div class="control">
                    <input class="input" type="text" placeholder="{{placemark.title}}" name="title">
                  </div>
                </div>
              </div>
              <!-- right column -->
              <div class="column">
                <div class="field">
                  <label class="label">Location</label>
                  <div class="control">
                    <input class="input" type="text" placeholder="{{placemark.location}}" name="location">
                  </div>
                </div>
              </div>
            </div>
            <div class="columns">
              <!-- left column -->
              <div class="column">
                <div class="field">
                  <label class="label">Description</label>
                  <div class="control">
                    <textarea class="textarea" placeholder="{{placemark.description}}" name="description" rows="5"></textarea>
                  </div>
                </div>
              </div>
              <!-- right column -->
              <div class="column">
                <div class="columns">
                  <!-- left column (Longitude) -->
                  <div class="column">
                    <div class="field">
                      <label class="label">Longitude</label>
                      <div class="control">
                        <input class="input" type="text" placeholder="{{placemark.longitude}}" name="longitude">
                      </div>
                    </div>
                  </div>
                  <!-- right column (Latitude) -->
                  <div class="column">
                    <div class="field">
                      <label class="label">Latitude</label>
                      <div class="control">
                        <input class="input" type="text" placeholder="{{placemark.latitude}}" name="latitude">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="columns">
                  <!-- category field -->
                  <div class="column">
                    <div class="field">
                      <label class="label">Category</label>
                      <div class="control">
                        <div class="select is-fullwidth">
                          <select name="category">
                            <option value="Park">Park</option>
                            <option value="Castle">Castle</option>
                            <option value="Ruin">Ancient Ruin</option>
                            <option value="Walk">Walk</option>
                            <option value="Beach">Beach</option>
                            <option value="River">River</option>
                            <option value="Lake">Lake</option>
                            <option value="Waterfall">Waterfall</option>
                            <option value="Mountain">Hike</option>
                            <option value="Cave">Cave</option>
                            <option value="Ringfort">Ringfort</option>
                            <option value="Dolmen">Dolmen</option>
                            <option value="Monument">Monument</option>
                            <option value="National Park">National Park</option>
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- update placemark button -->
                  <div class="column">
                    <div class="field">
                      <label class="label"><br></label>
                      <div class="control">
                        <button class="button is-success is-outlined is-hoverable">Update Placemark<i
                          class="fa-solid fa-arrows-rotate pl-3"
                          ></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
